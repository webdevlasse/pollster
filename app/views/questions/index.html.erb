
<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.id, poll_question_path(@poll, question)%> </td>

        <td><%= question.body %></td>
        <td><%=l question.created_at %></td>
        <td>
           <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_poll_question_path(@poll,question), :class => 'btn btn-mini' %>

           <%= link_to t('.answers', :default => t("helpers.answers")),
                                      new_answer_path(:question_id => question, :poll_id => @poll.id), :class => 'btn btn-mini' %>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      poll_question_path(@poll,question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <% question.answers.reject{|a| a.body.nil? }.each do |a| %>
      <tr>
        <td colspan="2">&nbsp;</td>
        <td colspan="2"><%= a.body %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_poll_question_path,
            :class => 'btn btn-primary' %>

 <%= link_to t('.poll', :default => t("helpers.poll")),
                        poll_path(@poll),
                        :class => 'btn btn-primary' %>

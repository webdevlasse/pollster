
<%= form_for @answer, :url => answers_path + "?poll_id=#{params[:poll_id]}&question_id=#{params[:question_id]}", :method => :post, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label @question.body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Save Answer', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                poll_questions_path(@question.poll), :class => 'btn' %>
  </div>
<% end %>

